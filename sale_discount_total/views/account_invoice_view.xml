<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_discount_account_invoice_form" model="ir.ui.view">
            <field name="name">view.discount.account.invoice.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@id='header_left_group']" position="inside">
                    <field name="discount_method" required="1"/>
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="after">
                    <field name="amount_discount"/>
                </xpath>
                <xpath expr="//field[@name='narration']" position="before">
                    <group name="discount" colspan="2">
                        <field name="discount_type" required="1"
                               attrs="{'invisible':[('discount_method','!=','global')]}"
                               groups="product.group_discount_per_so_line"/>
                        <field name="discount_rate" attrs="{'invisible':[('discount_method','!=','global')]}"
                               groups="product.group_discount_per_so_line"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']"
                       position="attributes">
                    <attribute name="digits">[16, 2]</attribute>
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="before">
                    <field name="discount_type" required="1"
                           attrs="{'column_invisible':[('parent.discount_method','!=','line')]}"/>
                    <field name="discount_rate" attrs="{'column_invisible':[('parent.discount_method','!=','line')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
