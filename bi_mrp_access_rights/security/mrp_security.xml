<odoo>
    <data noupdate="0">
        <record id="edit_work_order_duration_group" model="res.groups">
            <field name="name">Edit Work Order Real Duration</field>
        </record>

        <record id="show_bom_group" model="res.groups">
            <field name="name">Show BOM</field>
        </record>

        <record id="manufacturing_order_user_rule" model="ir.rule">
            <field name="name">Manufacturing Order User</field>
            <field name="model_id" ref="mrp.model_mrp_production"/>
            <field name="domain_force">
                [('workorder_ids.workcenter_id.department_ids','in',user.employee_id.department_id.id)]
            </field>
            <field name="groups" eval="[(4, ref('mrp.group_mrp_user'))]"/>
        </record>

        <record id="manufacturing_order_manager_rule" model="ir.rule">
            <field name="name">Manufacturing Order Manager</field>
            <field name="model_id" ref="mrp.model_mrp_production"/>
            <field name="groups" eval="[(4, ref('mrp.group_mrp_manager'))]"/>
        </record>
    </data>
</odoo>